<Window 
    x:Class="Game.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    
    Title="MainWindow" 
    Height="550" 
    Width="425"
    MouseDoubleClick="StartGame">
    
    <Canvas
        Name="Level"
        MouseMove="MovePlayer"
        Background="Azure"
        Margin="0,0,0,0">
        
        <Rectangle 
            Name="Player" 
            Fill="Blue" 
            Height="20" 
            Width="90"
            Canvas.Left="161" 
            Canvas.Bottom="20" 
            RadiusX="10"
            RadiusY="15"/>

        <Ellipse 
            Name="Ball"
            Fill="Red" 
            Height="20" 
            Width="20" 
            Canvas.Top="0"
            Canvas.Left="0"/>
    </Canvas>
</Window>
